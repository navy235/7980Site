@section scripts{
    <script type="text/javascript">
        $(function () {

            var searchUrl = "list-0-0-0-0-0-0-ss-0-0-0-p_1";
            var deadlinelist = $('.deadline-list');
            $('.deadline').hover(function () {
                deadlinelist.show()
            }, function () {
                deadlinelist.hide()
            })
            deadlinelist.find('li').click(function () {
                $('#deadtime').val($(this).data('value'));
                $('.deadlinetext').text($(this).text());
                $(this).addClass("selected").siblings().removeClass('selected');
                deadlinelist.hide();
            })

            $('.nav-block-item').hover(function () {
                var first = $(this).find('.full-block:first');
                first.removeClass('in').addClass('out');
                first.siblings().addClass('in').removeClass('out');
            }, function () {
                var first = $(this).find('.full-block:first');
                first.addClass('in').removeClass('out');
                first.siblings().removeClass('in').addClass('out');
            })

            function getBaseUrl() {
                var deadline = deadlinelist.find('li.selected').data('value');
                return searchUrl.replace('ss', deadline);
            }

            $("#btn-search").click(function () {
                var self = this;
                var keywordInput = $('#search');
                var keywords = keywordInput.val();
                if (keywords === '') {
                    keywordInput.val('请输入搜索的关键字')
                    keywordInput.addClass('fg-color-gray')
                    return false;
                } else if (keywords === '请输入搜索的关键字') {
                    keywordInput.focus();
                    return false;
                } else {
                    window.location.href = getBaseUrl() + "?query=" + encodeURIComponent($("#search").val());
                }
            });

            $('#search').keydown(function (e) {
                var target = $(e.currentTarget);
                if (target.val() === '请输入搜索的关键字') {
                    target.val('');
                    target.removeClass('fg-color-gray')
                }
                if (e.keyCode && e.keyCode === 13) {
                    $("#btn-search").click();
                    return false;
                } else {
                    if ($(target).val().length > 20) {
                        return false;
                    }
                }
            });

            $('#search').focusin(function (e) {
                var target = $(e.currentTarget);
                if (target.val() === '请输入搜索的关键字') {
                    target.val('');
                    target.removeClass('fg-color-gray')
                }
                if (e.keyCode && e.keyCode === 13) {
                    $("#btn-search").click();
                    return false;
                }
            });

            $('#search').focusout(function (e) {
                var target = $(e.currentTarget);
                if (target.val() === '') {
                    target.val('请输入搜索的关键字')
                    target.addClass('fg-color-gray')
                }
            })
        })

    </script>
}
