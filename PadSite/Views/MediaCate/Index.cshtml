@{
    ViewBag.Title = "媒体分类";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@(Html.Kendo().Grid<MediaCate>()
    .Name("MediaCateList")
    .Columns(columns =>
    {
        columns.Bound(c => c.ID).Hidden();
        columns.Bound(c => c.CateName);
        columns.Bound(c => c.Code);
        columns.Bound(c => c.OrderIndex);
        columns.ForeignKey(c => c.PID, (SelectList)ViewBag.PID);
        columns.Command(command => command.Destroy()).Title("删除").Width(120);
    })
    .ToolBar(toolbar =>
    {
        toolbar.Create();
        toolbar.Save();
    })
    .Editable(editable => editable.Mode(GridEditMode.InCell))
    .Pageable()
    .Sortable()
    .Groupable()
    .Scrollable()
    .Filterable()

    .DataSource(dataSource => dataSource
        .Ajax()
        .Batch(true)
        .PageSize(30)
        .Model(model => model.Id(c => c.ID))
        .Create("Editing_Create", "MediaCate")
        .Read("Editing_Read", "MediaCate")
        .Update("Editing_Update", "MediaCate")
        .Destroy("Editing_Destroy", "MediaCate")
        )
)
