<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
    <!--[if IE 7]>
      <link rel="stylesheet" href="netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome-ie7.min.css">
    <![endif]-->
    @Styles.Render("~/Content/kendo/2012.3.1114/css")
    @Styles.Render("~/Content/admin")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/kendo/2012.3.1114/jquery.min.js"></script>
    <script src="~/Scripts/kendo/2012.3.1114/kendo.all.min.js"></script>
    <script src="~/Scripts/kendo/2012.3.1114/kendo.aspnetmvc.min.js"></script>
    <script src="~/Scripts/kendo/2012.3.1114/cultures/kendo.culture.zh-CHS.min.js"></script>
    @Scripts.Render("~/bundles/jquerycontrol")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/base")
    <script type="text/javascript">
        kendo.culture("zh-CHS");
    </script>
</head>
<body class="admin">
    <div class="admin-container">
        <div class="admin-top">
            @* <div class="admin-top-logo">
                <img src="~/Content/images/logo.gif" alt="logo" width="59" height="64" border="0">
            </div>*@
            <div class="admin-top-title">@(ConfigSetting.SiteName)运营管理系统</div>
            <div class="admin-top-info">
                <span class="admin-top-group" style="margin-right: 50px; color: #fff;">@CookieHelper.NickName：<b></b> 您好，欢迎登陆使用！</span>
                <span class="admin-top-version" style="margin-right: 50px; color: #fff;">当前版本：1.0.0.1</span>
                <a class="admin-top-link" href="@Url.Action("Index", "dashboard")">后台首页</a>
                <a class="admin-top-link"  href="@Url.Action("logout", "login")">安全退出</a>
            </div>
        </div>
        <div class="admin-main">
            @(Html.Kendo().Splitter()
        .Name("main")

        .Panes(panes =>
        {
            panes.Add()
                .Size("130px")
                .Content(
                    @<text>
            <div></div>
            <ul id="leftmenu">
                <li><span class="icon-maitonn icon-cog"></span>系统设置
                    <ul>
                        <li><a href="@Url.Action("index", "citycate")" target="content"><span class="icon-maitonn icon-signal"></span>城市信息</a></li>

                        <li><a href="@Url.Action("index", "mediacate")" target="content"><span class="icon-maitonn icon-desktop"></span>媒体类别</a></li>

                        <li><a href="@Url.Action("index", "articlecate")" target="content"><span class="icon-maitonn icon-building"></span>文章类别</a></li>

                        <li><a href="@Url.Action("index", "formatcate")" target="content"><span class="icon-maitonn icon-tasks"></span>媒体形式</a></li>

                        <li><a href="@Url.Action("index", "periodcate")" target="content"><span class="icon-maitonn icon-calendar"></span>购买周期</a></li>

                        <li><a href="@Url.Action("index", "Industrycate")" target="content"><span class="icon-maitonn icon-h-sign"></span>投放行业</a></li>

                        <li><a href="@Url.Action("index", "crowdcate")" target="content"><span class="icon-maitonn icon-group"></span>受众人群</a></li>

                        <li><a href="@Url.Action("index", "ownercate")" target="content"><span class="icon-maitonn icon-suitcase"></span>所有权类别</a></li>

                        <li><a href="@Url.Action("index", "areacate")" target="content"><span class="icon-maitonn icon-tasks"></span>商业区分类</a></li>

                        <li><a href="@Url.Action("index", "purposecate")" target="content"><span class="icon-maitonn icon-fire"></span>投放目的</a></li>
                    </ul>
                </li>

                <li><span class="icon-maitonn icon-user-md"></span>权限设置
                    <ul>
                        <li><a href="@Url.Action("index", "permissions")" target="content"><span class="icon-maitonn icon-key"></span>权限管理</a></li>
                        <li><a href="@Url.Action("index", "roles")" target="content"><span class="icon-maitonn icon-user"></span>角色管理</a></li>
                        <li><a href="@Url.Action("index", "group")" target="content"><span class="icon-maitonn icon-group"></span>群组管理</a></li>
                        <li><a href="@Url.Action("index", "department")" target="content"><span class="icon-maitonn icon-sitemap"></span>部门管理</a></li>
                    </ul>
                </li>

                <li><span class="icon-maitonn icon-user"></span>会员管理
                    <ul>
                        <li><a href="@Url.Action("index", "member")" target="content"><span class="icon-maitonn icon-user"></span>会员管理</a></li>
                        <li><a href="@Url.Action("create", "member")" target="content"><span class="icon-maitonn icon-plus-sign"></span>添加会员</a></li>
                    </ul>
                </li>

                <li><span class="icon-maitonn icon-credit-card"></span>企业审核
                    <ul>
                        <li><a href="@Url.Action("index", "bizverify")" target="content"><span class="icon-maitonn icon-question-sign"></span>待审核列表</a></li>
                        <li><a href="@Url.Action("Authed", "bizverify")" target="content"><span class="icon-maitonn icon-ok-sign"></span>已通过列表</a></li>
                    </ul>
                </li>

                <li><span class="icon-maitonn icon-desktop"></span>媒体审核
                    <ul>
                        <li><a href="@Url.Action("index", "mediaverify")" target="content"><span class="icon-maitonn icon-question-sign"></span>待审核列表</a></li>
                        <li><a href="@Url.Action("Authed", "mediaverify")" target="content"><span class="icon-maitonn icon-ok-sign"></span>已通过列表</a></li>
                    </ul>
                </li>

                <li><span class="icon-maitonn icon-paste"></span>文章管理
                    <ul>
                        <li><a href="@Url.Action("index", "article")" target="content"><span class="icon-maitonn icon-list"></span>文章列表</a></li>
                        <li><a href="@Url.Action("create", "article")" target="content"><span class="icon-maitonn icon-save"></span>添加文章</a></li>
                    </ul>
                </li>
            </ul>
            </text>
                );
            panes.Add()
            .Content(
                @<text>
            @RenderBody()
            <div id="loading" style="display: none;">
                <img src="~/Content/images/formloading.gif" alt="loading" border="0" />
            </div>
            <iframe id="content" name="content" width="100%" height="100%" style="display: none; margin: 0; padding: 0" frameborder="0"></iframe>
            </text>
            );
        })
    )
        </div>
        <div class="admin-bottom">
            <div class="admin-bottom-msg">建议使用 IE8 以上版本或其它主流浏览器，分辨率 1024x768 或更高。 | Copyright © 2005-2015 www.dotaeye.com All Rights Reserved.</div>
        </div>
    </div>



    <script type="text/javascript">
        $(function () {
            var leftmenu = $('#leftmenu').kendoPanelBar({
                expandMode: "single",
                select: onSelect
            }).data("kendoPanelBar");

            function onSelect(e) {
                var $link = $(e.item);
                if (!$link.find('ul').length > 0) {
                    $('#loading').show();
                    $('#content').hide();
                    $('#dashboard').hide();
                }
            }
            $('#content').load(function () {
                $('#loading').hide();
                $(this).show();
            })
        })
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
