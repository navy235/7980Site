@model  CompanyLogoViewModel
@{
    ViewBag.Title = "企业标志";
    Layout = "~/Views/Shared/_LayoutPersonal.cshtml";
}
<div class="personal clearfix">
    @Html.Partial("_leftmenu")
    <div class="personal-right">
        <div class="personal-right-body">
            <div class="personal-body-title clearfix">
                <ul class="personal-tab clearfix">
                    <li class="selected"><a href="@Url.Action("logo")"><span>企业标志</span></a></li>
                    <li><a href="@Url.Action("banner")"><span>企业横幅</span></a></li>
                    <li><a href="@Url.Action("notice")"><span>企业公告</span></a></li>
                    <li><a href="@Url.Action("message")"><span>企业留言</span></a></li>
                </ul>
            </div>

            <div class="personal-form-tips">
                <i class="icon-maitonn icon-exclamation-sign"></i><strong>友情提醒:</strong>
                @CookieHelper.NickName ,选择真实企业标志更方便大家了解你的企业。
            </div>

            <div class="personal-form personal-form-avtar">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-field">
                        @Html.LabelFor(x => x.LogoImg, new { @class = "field-label field-required" })
                        @Html.EditorFor(x => x.LogoImg)
                        @Html.ValidationMessageFor(x => x.LogoImg)
                    </div>

                    <div class="form-field form-field-submit">
                        <button type="submit" class="k-button ">
                            <i class="icon-maitonn icon-save"></i>
                            &nbsp;&nbsp;保&nbsp;&nbsp;存&nbsp;&nbsp;</button>
                    </div>
                }
            </div>
            <div class="personal-avtar-tips mt10">
                <ul>
                    <li>· 请上传您的企业标志</li>
                    <li>· 请勿在形象标示上留有任何联系方式的信息</li>
                    <li>· 支持JPG格式，图片大小不超过5MB</li>
                    <li>· 请保证图片质量，分辨率至少为200*200</li>
                    <li class="personal-avtar-tips-desc mt15">· 上传遇到问题，请联系客服：400-188-6666</li>
                </ul>
            </div>

        </div>

    </div>
</div>
