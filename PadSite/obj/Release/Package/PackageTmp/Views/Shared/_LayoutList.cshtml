                            <span><a href="@GetUrl(0, 59)">公园景点</a></span>
                            <span><a href="@GetUrl(0, 60)">娱乐场所</a></span>
                            <span><a href="@GetUrl(0, 61)">社区</a></span>
                            <span><a href="@GetUrl(0, 62)">运动场所</a></span>
                        </div>
                    </li>
                    <li class="clearfix">
                        <h3>
                            <a href="@GetUrl(0, 63)" class="a_type"><i class="icon-maitonn icon-desktop"></i>LED大屏</a>
                            <em style="display: none;">LED大屏</em>
                        </h3>

                    </li>
                    <li class="clearfix">
                        <h3>
                            <a href="@GetUrl(0, 64)" class="a_type"><i class="icon-maitonn icon-th-large"></i>其他</a>
                            <em style="display: none;">其他</em>
                        </h3>

                    </li>

                </ul>
            </div>
            <iframe frameborder="0" class="top-menu-frame" scrolling="no" style="height: 420px; display: none;"></iframe>
            <ul class="top-menu-list">
                <li><a href="@Url.Action("index", "home")">首页</a></li>
                <li class="active"><a href="@baseUrl">户外资源</a></li>
            </ul>
        </div>
    </div>


    @RenderBody()
    @Html.Partial("_Footer")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $(function () {
            $('.top-menu-category').hover(function () {
                $(this).find('.icon-category-arrow')
                    .addClass('icon-chevron-sign-down').removeClass('icon-chevron-sign-up')
                    .end()
                    .find('.top-left-nav')
                    .show()
                    .end()
                    .next('.top-menu-frame').show();
            }, function () {
                $(this).find('.icon-category-arrow')
                   .removeClass('icon-chevron-sign-down').addClass('icon-chevron-sign-up')
                   .end()
                   .find('.top-left-nav')
                   .hide()
                   .end()
                   .next('.top-menu-frame').hide();
            })
        })
    </script>


    @MiniProfiler.RenderIncludes(position: RenderPosition.Right, showTrivial: false, showTimeWithChildren: false)
</body>
</html>
