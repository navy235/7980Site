                        <div class="top-left-nav-sub clearfix">
                            <span><a href="@GetUrl(0, 42)">高铁</a></span>
                            <span><a href="@GetUrl(0, 43)">火车站</a></span>
                            <span><a href="@GetUrl(0, 44)">机场</a></span>
                            <span><a href="@GetUrl(0, 45)">地铁</a></span>
                            <span><a href="@GetUrl(0, 46)">公交车</a></span>
