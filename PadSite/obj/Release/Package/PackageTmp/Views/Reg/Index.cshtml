@model  PadSite.ViewModels.RegViewModel
@{
    ViewBag.Title = "用户注册";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="reg-content">
    <div class="main">
        <div class="main-title">
            <h6>
                <span class="icon-maitonn icon-caret-right"></span>注册@(ConfigSetting.SiteName)帐号</h6>
        </div>
        <div class="main-content">
            <div class="main-form">
                <div class="main-form-notice-tips mb20 mt20 ml60">
                    <span class="icon-maitonn icon-exclamation-sign"></span>
                    您可以直接注册成为具有商务交易功能的 <a href="@Url.Action("regbiz")">企业会员</a> ,<a href="@Url.Action("index", "help", new { id = 5 })">有什么不同？</a>
                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.EditorForModel()
                    <div class="form-field form-field-submit fg-color-gray mt10">
                        <button type="submit" class="btn btn-success mr20">
                            同意服务协议，提交注册</button>已有账号？<a href="/?tourl=">请登录</a>
                    </div>
                    <div class="form-field form-field-submit">
                        <a href="@Url.Action("index", "help", new { id = 5 })" target="_blank">查看《@(ConfigSetting.SiteName)网站服务条款》</a>
                        <div class="clearfix height20"></div>
                    </div>
                }
            </div>
        </div>
        <div class="main-content-right">
            <h4>使用合作账号登录</h4>
            <ul class="sign-item">
                <li><a href="@Url.Action("sina", "login")">
                    <img src="~/Content/images/zh-sina.jpg" alt="新浪微博账号"></a></li>
                <li><a href="@Url.Action("qq", "login")">
                    <img src="~/Content/images/zh-qq.jpg" alt="QQ账号"></a></li>
                <li><a href="@Url.Action("taobao", "login")">
                    <img src="~/Content/images/zh-tb.jpg" alt="淘宝网账号"></a></li>
                <li><a href="@Url.Action("douban", "login")">
                    <img src="~/Content/images/zh-db.jpg" alt="豆瓣账号"></a></li>
                <li><a href="@Url.Action("renren", "login")">
                    <img src="~/Content/images/zh-rr.jpg" alt="人人网账号"></a></li>
            </ul>
            <p class="in-login">已有账号，立即登录</p>
            <p class="login-sub-btn">
                <a href="@Url.Action("index", "login")" class="btn  mt10 ">&nbsp;&nbsp;登&nbsp;&nbsp;录&nbsp;&nbsp;</a>
            </p>

        </div>
        <div class="clearfix">
        </div>
    </div>
</div>
