@model ResetPasswordViewModel
@{
    ViewBag.Title = "重新设置密码";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="reg-content">
    <div class="main">
        <div class="main-title">
            <h6>
                <i class="icon-maitonn icon-caret-right"></i>重新设置密码</h6>
        </div>

        <div class="form-step" style="margin-top: 50px;">
            <ul class="form-step-list">
                <li>第一步：输入邮箱<em></em><i></i></li>
                <li>第二步：查收邮件</li>
                @if (!ViewBag.haveChangePwd)
                {
                    <li class="current">第三步：更改密码<em></em><i></i></li>
                    <li>第四步：更改成功</li>
                }
                else
                {
                    <li>第三步：更改密码<em></em><i></i></li>
                    <li class="current">第四步：更改成功</li>
                }
            </ul>
        </div>
        <div class="main-form reset-password">

            <i class="icon-maitonn icon-refresh"></i>

            @if (!ViewBag.haveChangePwd)
            {
                <h2>重新设置密码：</h2>

                <div class="password-tips">
                    请输入两次新密码，然后点击“确定”即可完成密码修改，<br>
                    密码可由英文字母、数字（0~9）组成，更改后请妥善保管新密码。
                </div>
                using (Html.BeginForm())
                {
                @Html.AntiForgeryToken()
                @Html.EditorForModel()
                <div class="form-field form-field-submit c_gray">
                    <button type="submit" class="btn btn-warning ">
                        修改密码</button>
                </div>
                }
            }
            else
            {
                <h2>密码更改成功</h2>
                <div class="password-tips">
                    您的密码更新已成功，请点击确定并用新密码重新登陆。
                </div>
                <a class="btn btn-warning mt20 " href="@Url.Action("Index", "Login", new { username = ViewBag.Email })" >重新登录</a>
            }

        </div>
        <div class="clearfix">
        </div>
    </div>
</div>
