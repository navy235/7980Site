@model LoginViewModel
@{
    ViewBag.Title = "登录";
    Layout = "~/Views/Shared/_LayoutPopLogin.cshtml";
}

<div class="main" style="border: none; overflow: hidden; padding-bottom: 0">
    <div class="main-form" style="margin-top: 0">
        @if (ViewBag.Message != null)
        {
            <p class="main-form-tips main-form-tips-error"><span class="icon-maitonn icon-caret-exclamation-sign"></span>@ViewBag.Message</p>
        }
        else
        {
            <p class="main-form-tips"><span class="icon-maitonn icon-exclamation-sign"></span>欢迎登录@(ConfigSetting.SiteName)</p>
        }

        @using (Html.BeginForm())
        {
    
            @Html.AntiForgeryToken()
            <div class="form-field">
                @Html.LabelFor(x => x.Email, new { @class = "field-label field-required" })
                @Html.EditorFor(x => x.Email)
                @Html.ValidationMessageFor(x => x.Email)
            </div>
            <div class="form-field">
                @Html.LabelFor(x => x.Password, new { @class = "field-label field-required" })
                @Html.EditorFor(x => x.Password)
                <a href="@Url.Action("GetPassword", "Reg")" tabindex="-1"  target="_blank">忘记密码？</a>
                @Html.ValidationMessageFor(x => x.Password)

            </div>
            <div class="form-field form-field-remember">
                <input type="checkbox" name="Remember" value="true" id="Remember" tabindex="-1">
                <label for="Remember" class="c_gray remember" tabindex="-1">记住我</label>
            </div>
            <div class="form-field form-field-validatecode">
                @Html.LabelFor(x => x.Vcode, new { @class = "field-label field-required" })
                @Html.EditorFor(x => x.Vcode)
                @Html.ValidationMessageFor(x => x.Vcode)
            </div>
            <div class="form-field form-field-submit">
                <button type="submit" class="btn btn-success mr20 ">
                    &nbsp;登&nbsp;录</button>

                <a href="@Url.Action("Index", "Reg")" target="_blank" class="btn ">&nbsp;免费注册</a>
            </div>
                    
            <div class="form-field  form-field-login">
                <p>使用合作账号登录</p>
                <ul class="other-login clearfix">
                    <li><a href="@Url.Action("QQ")" class="qq" ></a></li>
                    <li><a href="@Url.Action("Sina")" class="sina" ></a></li>
                    <li><a href="@Url.Action("Douban")" class="douban" ></a></li>
                    <li><a href="@Url.Action("Renren")" class="renren" ></a></li>
                    <li><a href="@Url.Action("Taobao")" class="taobao" ></a></li>
                </ul>
                <div class="clearfix height10"></div>
            </div>
        }
    </div>
</div>

