@model HelpViewModel
@{
    ViewBag.Title = ConfigSetting.SiteName + "帮助中心";
    Layout = "~/Views/Shared/_LayoutHelp.cshtml";
}

<div class="nav-bread">
    <a class="nav-bread-home" href="@Url.Action("index", "home")"><i class="icon-maitonn icon-home"></i></a>&gt;
    <span>@Model.Article.ArticleCate.CateName</span>
    &gt;<strong>@Model.Article.Name</strong>
</div>
<div class="help-main clearfix">
    <div class="help-left">
        <dl>
            @foreach (var item in Model.HelpNav)
            { 
                <dt>@item.Name</dt>
                foreach (var childitem in item.Items)
                { 
                <dd><a class="@(childitem.ID == Model.Article.ID ? "active" : "")" href="@Url.Action("index", "help", new { id = childitem.ID })">@childitem.Name</a></dd>
                }
            }

        </dl>
    </div>
    <div class="help-right">
        <div>
            <h2 class="help-right-h2">@Model.Article.Name</h2>
            <div class="help-right-box">
                @Html.Raw(HttpUtility.HtmlDecode(Model.Article.Content))
            </div>
        </div>
    </div>
</div>


