        <param name="ConversionPattern" value="%n ExLogTime :%d [%t] %n ExLogLevel :%-5p %n ExLogClass :%c [%x] %n%m %n" />
      </layout>
    </appender>
    <logger name="logerror">
      <level value="ERROR" />
      <appender-ref ref="ErrorAppender" />
    </logger>
    <logger name="loginfo">
      <level value="INFO" />
      <appender-ref ref="InfoAppender" />
    </logger>
    <root>
